---
import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCE = [
  {
    date: "Junio 2024 - Actualidad",
    title: "Desarrollador Front-End - Agencia Quiebre",
    description:
      "Desarrollo de soluciones frontend utilizando Vue.js, Nuxt.js y Electron, con un enfoque en la creación de componentes reutilizables para aplicaciones dinámicas y eficientes. He implementado Electron para crear aplicaciones de escritorio integradas con Nuxt.js, ampliando nuestras soluciones web a entornos de escritorio.",
  },
  {
    date: "Noviembre 2023 - Mayo 2024",
    title: "Desarrollador Front-End - MyWacc",
    description:
      "Desarrollo de una interfaz dinámica y receptiva en Vue.js para una navegación fluida y experiencia intuitiva. Implementé componentes reutilizables, colaboré con el equipo Frontend para el diseño y prioricé la coherencia estética y usabilidad del sitio.",
  },
  {
    date: "Abril 2021 - Agosto 2023",
    title: "Analista de procesos y Desarrollador Web - Desafío Latam",
    description:
      "Automatización de procesos del área y gestión de HubSpot CRM. Experiencia en Google Data Studio. Creación de landings pages para Desafío Latam y proyectos externos. Además, tutor del curso Fundamentos de Desarrollo Web.",
  },
];
---

<ol class="relative border-s-2 border-cyan-400/30 md:px-6 space-y-12">
  {
    EXPERIENCE.map((experience) => (
      <li class="experience-item mb-10 ms-8 relative">
        <span class="absolute flex items-center justify-center w-8 h-8 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-full -start-4 ring-4 ring-cyan-900/50 z-10 shadow-lg shadow-cyan-400/50">
          <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
          </svg>
        </span>
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>

<script>
   import { gsap } from 'gsap';
   import { ScrollTrigger } from 'gsap/ScrollTrigger';

   gsap.registerPlugin(ScrollTrigger);

   // Animación de items de experiencia
   gsap.utils.toArray('.experience-item').forEach((item: any, index) => {
      gsap.from(item, {
         scrollTrigger: {
            trigger: item,
            start: 'top 80%',
            end: 'top 50%',
            toggleActions: 'play none none reverse'
         },
         x: -50,
         opacity: 0,
         duration: 0.8,
         delay: index * 0.2,
         ease: 'power3.out'
      });
   });
</script>
