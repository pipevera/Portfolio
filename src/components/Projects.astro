---
import GithubIcon from '../icons/Github.astro'
import HtmlIcon from '../icons/HtmlIcon.astro'
import CssIcon from '../icons/CssIcon.astro'
import JavascriptIcon from '../icons/JavascriptIcon.astro'
import TailwindIcon from '../icons/TailwindIcon.astro'
import VueIcon from '../icons/VueIcon.astro'
import BootstrapIcon from '../icons/BootstrapIcon.astro'
import ApiIcon from '../icons/ApiIcon.astro'

const PROJECTS = [
   {
      title: 'Simulación de crédito',
      description: '',
      link: 'https://vue-inmobiliario.netlify.app/',
      github: 'https://github.com/pipevera/desafio-inmobiliario',
      image: '/img/simulacion.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'TAILWIND', "VUE JS", "API REST"]
   },
   {
      title: 'Astrodev',
      description: '',
      link: 'https://starsdevs.netlify.app/',
      github: 'https://github.com/pipevera/stars',
      image: '/img/astrodev.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT']
   },
   {
      title: 'CompromisoTech',
      description: '',
      link: 'https://admirable-gecko-18e75a.netlify.app/',
      github: 'https://github.com/pipevera/CompromisoTech',
      image: '/img/compromisoTech.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'BOOTSTRAP']
   },
   {
      title: 'Incubadora Reworth',
      description: '',
      link: 'https://heroic-cassata-4e6c38.netlify.app/',
      github: 'https://github.com/pipevera/incubadora',
      image: '/img/incubadora.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'BOOTSTRAP']
   },
   {
      title: 'Racing Performance',
      description: '',
      link: 'https://amazing-almeida-26e6e0.netlify.app/',
      github: 'https://github.com/pipevera/racingPerformance',
      image: '/img/racingPerformance.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'VUE JS', 'VUETIFY']
   },
   {
      title: 'Travels',
      description: '',
      link: 'https://travels-tailwind.netlify.app/',
      github: 'https://github.com/pipevera/TravelsTailwindcss',
      image: '/img/travels.png',
      tags: ['HTML', 'TAILWIND CSS']
   },
]

const getIconForTag = (tag: string) => {
   const tagLower = tag.toLowerCase();
   if (tagLower.includes('html')) return HtmlIcon;
   if (tagLower.includes('css') && !tagLower.includes('tailwind')) return CssIcon;
   if (tagLower.includes('javascript')) return JavascriptIcon;
   if (tagLower.includes('tailwind')) return TailwindIcon;
   if (tagLower.includes('vue')) return VueIcon;
   if (tagLower.includes('bootstrap')) return BootstrapIcon;
   if (tagLower.includes('api')) return ApiIcon;
   if (tagLower.includes('vuetify')) return VueIcon;
   return null;
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full">
   {  
      PROJECTS.map(({title, description, link, github, image, tags}) => 
      <article class="project-card group relative bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 hover:border-cyan-400/50 transition-all duration-500 hover:shadow-2xl hover:shadow-cyan-400/20 flex flex-col h-full">
         <div class="relative overflow-hidden aspect-video">
            <a href={link} target="_blank" rel="noopener" class="block">
               <img 
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                  src={image} 
                  alt={title}
                  loading="lazy"
               />
               <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </a>
         </div>
         
         <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-2xl font-bold text-white group-hover:text-cyan-400 transition-colors duration-300 mb-4">
               {title}
            </h3>
            
            <div class="flex flex-wrap gap-2 mb-auto pb-6">
               {tags.map(tag => {
                  const Icon = getIconForTag(tag);
                  return (
                     <span class="text-xs px-3 py-1.5 rounded-full bg-cyan-400/10 text-cyan-400 border border-cyan-400/20 inline-flex items-center gap-1.5 whitespace-nowrap">
                        {Icon && <Icon />}
                        <span>{tag}</span>
                     </span>
                  );
               })}
            </div>
            
            <div class="flex gap-3">
               <a 
                  href={link} 
                  target="_blank" 
                  rel="noopener"
                  class="flex-1 text-center px-4 py-2 bg-gradient-to-r from-cyan-400 to-blue-500 text-black font-semibold rounded-lg hover:shadow-lg hover:shadow-cyan-400/50 transition-all duration-300 hover:scale-105"
               >
                  Ver Demo
               </a>
               <a 
                  href={github} 
                  target="_blank" 
                  rel="noopener"
                  class="px-4 py-2 bg-white/5 border border-white/20 rounded-lg hover:bg-white/10 hover:border-cyan-400/50 transition-all duration-300 hover:scale-105 flex items-center gap-2"
               >
                  <GithubIcon />
               </a>
            </div>
         </div>
      </article>
      )
   }
</div>

<script>
   import { gsap } from 'gsap';
   import { ScrollTrigger } from 'gsap/ScrollTrigger';

   gsap.registerPlugin(ScrollTrigger);

   // Animación de las tarjetas de proyectos
   gsap.utils.toArray('.project-card').forEach((card: any, index) => {
      gsap.from(card, {
         scrollTrigger: {
            trigger: card,
            start: 'top 85%',
            end: 'top 60%',
            toggleActions: 'play none none reverse'
         },
         y: 100,
         opacity: 0,
         duration: 0.8,
         delay: index * 0.1,
         ease: 'power3.out'
      });
   });
</script>




