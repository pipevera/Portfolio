---
interface Props {
   date: string
   title: string
   description: string
}
const {date, title, description } = Astro.props
---

<div class="relative bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:border-yellow-300/50 transition-all duration-500 hover:shadow-xl hover:shadow-yellow-300/10 group">
   <div class="space-y-3">
      <time class="inline-block px-3 py-1 text-sm font-medium text-yellow-300 bg-yellow-300/10 rounded-full border border-yellow-300/20">
         {date}
      </time>
      <h3 class="text-2xl md:text-3xl font-bold text-white group-hover:text-yellow-300 transition-colors duration-300">
         {title}
      </h3>
      <p class="text-base md:text-lg text-white/80 leading-relaxed">
         {description}
      </p>
   </div>
   
   <!-- Efecto de brillo en hover -->
   <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-transparent via-yellow-300/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
</div>
   
   