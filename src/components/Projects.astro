---
import GithubIcon from '../icons/Github.astro'
const PROJECTS = [
   {
      title: 'Simulación de crédito',
      description: '',
      link: 'https://vue-inmobiliario.netlify.app/',
      github: 'https://github.com/pipevera/desafio-inmobiliario',
      image: '/img/simulacion.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'TAILWIND', "VUE JS", "API REST"]
   },
   {
      title: 'Astrodev',
      description: '',
      link: 'https://starsdevs.netlify.app/',
      github: 'https://github.com/pipevera/stars',
      image: '/img/astrodev.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT']
   },
   {
      title: 'CompromisoTech',
      description: '',
      link: 'https://admirable-gecko-18e75a.netlify.app/',
      github: 'https://github.com/pipevera/CompromisoTech',
      image: '/img/compromisoTech.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'BOOTSTRAP']
   },
   {
      title: 'Incubadora Reworth',
      description: '',
      link: 'https://heroic-cassata-4e6c38.netlify.app/',
      github: 'https://github.com/pipevera/incubadora',
      image: '/img/incubadora.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'BOOTSTRAP']
   },
   {
      title: 'Racing Performance',
      description: '',
      link: 'https://amazing-almeida-26e6e0.netlify.app/',
      github: 'https://github.com/pipevera/racingPerformance',
      image: '/img/racingPerformance.png',
      tags: ['HTML', 'CSS', 'JAVASCRIPT', 'VUE JS', 'VUETIFY']
   },
   {
      title: 'Travels',
      description: '',
      link: 'https://travels-tailwind.netlify.app/',
      github: 'https://github.com/pipevera/TravelsTailwindcss',
      image: '/img/travels.png',
      tags: ['HTML', 'TAILWIND CSS']
   },
]
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full">
   {  
      PROJECTS.map(({title, description, link, github, image, tags}) => 
      <article class="project-card group relative bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden border border-white/10 hover:border-yellow-300/50 transition-all duration-500 hover:shadow-2xl hover:shadow-yellow-300/20">
         <div class="relative overflow-hidden aspect-video">
            <a href={link} target="_blank" rel="noopener" class="block">
               <img 
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                  src={image} 
                  alt={title}
                  loading="lazy"
               />
               <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </a>
         </div>
         
         <div class="p-6 space-y-4">
            <h3 class="text-2xl font-bold text-white group-hover:text-yellow-300 transition-colors duration-300">
               {title}
            </h3>
            
            <div class="flex flex-wrap gap-2">
               {tags.map(tag => (
                  <span class="text-xs px-3 py-1 rounded-full bg-yellow-300/10 text-yellow-300 border border-yellow-300/20">
                     {tag}
                  </span>
               ))}
            </div>
            
            <div class="flex gap-3 pt-4">
               <a 
                  href={link} 
                  target="_blank" 
                  rel="noopener"
                  class="flex-1 text-center px-4 py-2 bg-gradient-to-r from-yellow-300 to-yellow-500 text-black font-semibold rounded-lg hover:shadow-lg hover:shadow-yellow-300/50 transition-all duration-300 hover:scale-105"
               >
                  Ver Demo
               </a>
               <a 
                  href={github} 
                  target="_blank" 
                  rel="noopener"
                  class="px-4 py-2 bg-white/5 border border-white/20 rounded-lg hover:bg-white/10 transition-all duration-300 hover:scale-105 flex items-center gap-2"
               >
                  <GithubIcon />
               </a>
            </div>
         </div>
      </article>
      )
   }
</div>

<script>
   import { gsap } from 'gsap';
   import { ScrollTrigger } from 'gsap/ScrollTrigger';

   gsap.registerPlugin(ScrollTrigger);

   // Animación de las tarjetas de proyectos
   gsap.utils.toArray('.project-card').forEach((card: any, index) => {
      gsap.from(card, {
         scrollTrigger: {
            trigger: card,
            start: 'top 85%',
            end: 'top 60%',
            toggleActions: 'play none none reverse'
         },
         y: 100,
         opacity: 0,
         duration: 0.8,
         delay: index * 0.1,
         ease: 'power3.out'
      });
   });
</script>




